diff --git a/tools/bcp/add_path.cpp b/tools/bcp/add_path.cpp
index 8a1fee33d..747bb8c78 100644
--- a/tools/bcp/add_path.cpp
+++ b/tools/bcp/add_path.cpp
@@ -15,6 +15,7 @@
 #include "bcp_imp.hpp"
